[Unit]
Description=AAOIFI Chatbot FastAPI Backend
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/var/www/aaoifi-chatbot-backend
Environment="PATH=/var/www/aaoifi-chatbot-backend/.venv/bin"
ExecStart=/var/www/aaoifi-chatbot-backend/.venv/bin/gunicorn app.main:app --workers 4 --worker-class uvicorn.workers.UvicornWorker --bind 0.0.0.0:5015 --timeout 120
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
