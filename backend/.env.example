# =============================================================================
# LLM PROVIDER CONFIGURATION
# =============================================================================
# Choose your LLM provider: "groq" or "openai"
# Simply change this value and provide the corresponding API key below
LLM_PROVIDER=groq

# -----------------------------------------------------------------------------
# GROQ SETTINGS (for Groq LLM)
# -----------------------------------------------------------------------------
GROQ_API_KEY=your_groq_api_key_here
# Available Groq models:
# - llama-3.3-70b-versatile (recommended, default)
# - llama-3.1-8b-instant (faster)
# - mixtral-8x7b-32768 (fallback)
GROQ_MODEL=llama-3.3-70b-versatile

# -----------------------------------------------------------------------------
# OPENAI SETTINGS (for OpenAI GPT)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=your_openai_api_key_here
# Available OpenAI models:
# - gpt-4o (recommended for best quality)
# - gpt-4o-mini (faster, cheaper)
# - gpt-4-turbo
# - gpt-3.5-turbo (fastest, cheapest)
OPENAI_MODEL=gpt-4o
OPENAI_TEMPERATURE=0.7

# =============================================================================
# VECTOR STORE CONFIGURATION
# =============================================================================

   PINECONE_API_KEY=your_pinecone_api_key_here/
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=aaoifi-standards

# =============================================================================
# API CONFIGURATION
# =============================================================================
DEBUG=False
